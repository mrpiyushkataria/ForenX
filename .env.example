# .env.example
# Copy this to .env and update values

# Database
DB_PASSWORD=StrongPassword123!

# Security
SECRET_KEY=YourSecretKeyHereChangeInProduction!
JWT_SECRET_KEY=YourJWTSecretKeyChangeInProduction!
ENCRYPTION_KEY=Your32ByteEncryptionKeyHere!

# API Keys
ABUSEIPDB_API_KEY=your_abuseipdb_key_here
VIRUSTOTAL_API_KEY=your_virustotal_key_here
SHODAN_API_KEY=your_shodan_key_here
IPINFO_TOKEN=your_ipinfo_token_here

# Monitoring
GRAFANA_PASSWORD=admin123

# Email/SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@forenx.com

# External Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
WEBHOOK_URLS=https://your-webhook.com/alert
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# Application
DEBUG=True
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
API_URL=http://localhost:8000
BASE_URL=http://localhost:3000

# Redis
REDIS_URL=redis://redis:6379
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# PostgreSQL
DATABASE_URL=postgresql://forenx:${DB_PASSWORD}@postgres/forenx
